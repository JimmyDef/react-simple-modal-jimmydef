{
  "name": "react-simple-modal-jimmydef",
  "description": "A simple modal component using React",
  "keywords": [
    "react",
    "modal",
    "dialog",
    "overlay",
    "react-component",
    "responsive",
    "customizable",
    "centered",
    "confirmation"
  ],
  "license": "MIT",
  "private": false,
  "type": "module",
  "author": "jimmy defains",
  "version": "1.1.11",
  "main": "dist/Modal.js",
  "module": "dist/Modal.js",
  "style": "dist/assets/Modal.css",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:component": "vite build --config vite.config.js",
    "build:demo": "vite build --config vite.config.demo.js",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "publish": "npm publish --access public",
